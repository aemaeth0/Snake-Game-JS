<html>
<head>
<script>

canv = document.getElementById("gc");
ctx = canv.getContext("2d");

drawBoard();
}

function drawBoard() {
  for(i=0; i<=400; i=i+40) {
    ctx.moveTo(i,0);
    ctx.lineTo(i,400);
    ctx.stroke();
  }

  for(j=0; j<=400; j=j+40) {
    ctx.moveTo(0,j);
    ctx.lineTo(400,j);
    ctx.stroke();
  }

  context.strokeStyle = "red";
  context.stroke();
  }

drawBoard();

</script>
<body style="background: lightblue;">
<canvas id="gc" width="420px" height="420px" style="background: #fff; margin:20px"></canvas>
</body>
</html>
